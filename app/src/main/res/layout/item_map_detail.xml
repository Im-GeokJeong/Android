<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_map_detail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/goolsakgi" />

    <TextView
        android:id="@+id/tv_map_detail_machine_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        style="@style/TextMedium16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_map_detail"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="소똥치우는기계"
        tools:textSize="18sp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        style="@style/TextMedium16"
        app:layout_constraintStart_toStartOf="@+id/tv_map_detail_machine_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_map_detail_machine_name"
        tools:text="3"
        tools:textSize="18sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>