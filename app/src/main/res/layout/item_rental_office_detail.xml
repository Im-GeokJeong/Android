<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="office"
            type="com.im_geokjeong.model.Office" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_map_detail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/goolsakgi" />

        <TextView
            android:id="@+id/tv_map_detail_machine_name"
            style="@style/TextMedium16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_map_detail"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="소똥치우는기계"
            tools:textSize="18sp" />

        <TextView
            style="@style/TextMedium16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="@+id/tv_map_detail_machine_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_map_detail_machine_name"
            tools:text="3"
            tools:textSize="18sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>